# Auth schema.

directive @auth on FIELD_DEFINITION

input NewUserInput {
	name: String!
	username: String!
	profile_image_url: String!
	phone_number: String!
}

extend type Query {
	sendOTP(phone_number: String!): String!
	signIn(phone_number: String!): User! @auth
}

extend type Mutation {
	signUp(new_user: NewUserInput!): User!
}
